generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum TenantRole {
  OWNER
  SELLER
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  password     String
  name         String?
  role         Role      @default(USER)
  memberships  Membership[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Tenant {
  id           String        @id @default(cuid())
  name         String
  slug         String        @unique
  memberships  Membership[]
  places       Place[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Membership {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  role      TenantRole
  createdAt DateTime @default(now())
  @@unique([userId, tenantId])
}

model Place {
  id          String   @id @default(cuid())
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  tenantId    String
  title       String
  description String?
  point       Json
  tags        String[] @default([])
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
